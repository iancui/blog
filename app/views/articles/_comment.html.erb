<%= form_tag comment_articles_path do %>
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h4>评论</h4>
        <%= text_area_tag 'comment_text', @comment, size: "100x5", wrap: "hard" %>
        <%= hidden_field_tag 'id', params[:id] %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-8 col-md-1 text-right">
        <%= button_tag '提交', class: "glyphicon glyphicon-ok btn btn-default" %>
      </div>
    </div>
<% end %>